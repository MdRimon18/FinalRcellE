 @page "/example"

<h3>Search Component Example</h3>

<SearchComponent T="MyCustomObject"
                 Items="customObjects"
                 DisplayProperty="obj => obj.Name"
                 Placeholder="Search by name..."
                 OnItemSelected="OnItemSelected" />

<p>You selected: @SelectedObject?.Name (Id: @SelectedObject?.Id)</p>

@code {
    public class MyCustomObject
    {
        public int Id { get; set; }
        public string Name { get; set; }
    }

    private List<MyCustomObject> customObjects = new List<MyCustomObject>
    {
        new MyCustomObject { Id = 1, Name = "Massachusetts Institute of Technology" },
        new MyCustomObject { Id = 2, Name = "University of Chicago" },
        new MyCustomObject { Id = 3, Name = "GSAS Open Labs At Harvard" },
        new MyCustomObject { Id = 4, Name = "California Institute of Technology" },
        new MyCustomObject { Id = 5, Name = "Falcon v1.8.2" }
    };

    private MyCustomObject SelectedObject { get; set; }

    private void OnItemSelected(MyCustomObject selectedItem)
    {
        SelectedObject = selectedItem;
    }
}
