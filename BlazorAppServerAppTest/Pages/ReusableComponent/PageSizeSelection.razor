<div class="input-group d-flex justify-content-between align-items-center mb-3">

    <select class="form-select form-select-sm" @onchange="OnSelectedPageSizeChanged">
        @foreach (var size in PageSizeOptions)
        {
            <option value="@size">@size</option>
        }
    </select>
</div>

@code {
    [Parameter]
    public int SelectedPageSize { get; set; }

    [Parameter]
    public EventCallback<int> SelectedPageSizeChanged { get; set; }

    // Options for page sizes
    private int[] PageSizeOptions = { 2, 5,10,20,30}; // Customize as needed

    private async Task OnSelectedPageSizeChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value.ToString(), out int newSize))
        {
            SelectedPageSize = newSize;
            await SelectedPageSizeChanged.InvokeAsync(newSize);
        }
    }
}
