@page "/customer_entry"
@inject IJSRuntime JS



        <div class="col-lg-12 ps-lg-2 mb-2">
            <div class="row g-0 h-100 align-items-stretch">
                <div class="col-lg-12 mb-2">
                    <div class="card-body bg-body-tertiary pb-0">
                        <a class="mb-2 d-block d-flex align-items-center" href="#supplier-form" data-bs-toggle="collapse" aria-expanded="true" aria-controls="supplier-form"><span class="circle-dashed"><span class="fas fa-plus"></span></span><span class="ms-3">Add new Customer</span></a>
                        <div class="collapse show" id="supplier-form">
                            <div class="card mb-3">
                                <div class="card-body bg-body-tertiary">
                                    <div class="row">
                                      <div class="col-md-6"> 
                                        <div class="col-sm-9 animated-div">
                                            <div class="form-group">
                                                <label for="mobileNumber" class="label text-dark">Mobile Number<span class="error-star">*</span></label>
                                                <input name="mobileNumber" type="tel" class="form-control form-control-sm form-rounded invalid-border-input" placeholder="017**-******" required>
                                                <div class="text-left invalid-message-color">
                                                    Mobile Number Required!
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-9 animated-div">
                                            <div class="form-group">
                                                <label for="name" class="label text-dark">Name<span class="error-star">*</span></label>
                                                <input name="name" type="text" class="form-control form-control-sm form-rounded invalid-border-input" placeholder="Name" required>
                                                <div class="text-left invalid-message-color">
                                                    Name Required!
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-9 animated-div">
                                            <div class="form-group">
                                                <label for="selectCountry" class="label text-dark">Select Country<span class="error-star">*</span></label>
                                                <select class="form-select form-rounded form-select-sm invalid-border-input" id="selectCountry" required="">
                                                    <option selected="" disabled="" value="">Select Country</option>
                                                    <option value="1">Bangladesh</option>
                                                    <option value="2">...</option>
                                                    <option value="3">...</option>
                                                </select>
                                                <div class="text-left invalid-message-color">
                                                    Country Required!
                                                </div>
                                            </div>


                                        </div>
                                        <div class="col-sm-9 animated-div">
                                            <div class="form-group">
                                                <label for="selectCountry" class="label text-dark">Select Customer Type<span class="error-star">*</span></label>
                                                <select class="form-select form-rounded form-select-sm invalid-border-input" id="selectCountry" required="">
                                                    <option selected="" disabled="" value="">Select Customer Type</option>
                                                    <option value="1">Inventory Customer</option>
                                                    <option value="2">E-Commerce Customer</option>

                                                </select>
                                                <div class="text-left invalid-message-color">
                                                    Country Required!
                                                </div>
                                            </div>


                                        </div>
                                        <div> 
                                            <div class="col-sm-9 animated-div">
                                                <div class="form-group">
                                                    <label for="stateName" class="label text-dark">State Name</label>
                                                    <input name="stateName" type="text" class="form-control form-control-sm form-rounded" placeholder="State Name">
                                                </div>
                                            </div>
                                            <div class="col-sm-9 animated-div">
                                                <div class="form-group">
                                                    <label for="addressLineOne" class="label text-dark">Address Line-1</label>
                                                    <input name="addressLineOne" type="text" class="form-control form-control-sm form-rounded" placeholder="Give Customer Address Line-1">
                                                </div>
                                            </div>
                                            <div class="col-sm-9 animated-div">
                                                <div class="form-group">
                                                    <label for="addressLineTwo" class="label text-dark">Address Line-2</label>
                                                    <input name="addressLineTwo" type="text" class="form-control form-control-sm form-rounded" placeholder="Give Customer Address Line-2">
                                                </div>
                                            </div>
                                            <div class="col-sm-9 animated-div">
                                                <div class="form-group">
                                                    <label for="email" class="label text-dark">Email</label>
                                                    <input name="email" type="email" class="form-control form-control-sm form-rounded" placeholder="Give Customer Email">
                                                </div>
                                            </div>
                                            <div class="col-sm-9 animated-div">
                                                <div class="form-group">
                                                    <label for="officeName" class="label text-dark">Office Name</label>
                                                    <input name="officeName" type="text" class="form-control form-control-sm form-rounded" placeholder="Office Name">
                                                </div>
                                            </div>
                                            <div class="col-sm-9 animated-div">
                                                <div class="form-group">
                                                    <label for="occupation" class="label text-dark">Occupation</label>
                                                    <input name="occupation" type="text" class="form-control form-control-sm form-rounded" placeholder="Occupation">
                                                </div>
                                            </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-sm-8 col-md-8">
                                            <div class="card-header">
                                                <h5 class="mb-0">Upload Image</h5>
                                            </div>
                                            <div class="image-uploader">
                                                <div class="image-preview">
                                                    <img src="@imageData"
                                                         alt="Selected Image" style="width: 160px;height: 160px;" />
                                                    @if (imageData != defaultImage)
                                                    {
                                                        <button class="remove-button" @onclick="RemoveImage">X</button>
                                                    }
                                                </div>

                                                <InputFile class="file-input form-control form-control-sm form-rounded" OnChange="HandleSelected" id="fileInput" />
                                            </div>
                                        </div>
                                    </div>
                                        <div>
                                        
                                    </div>
                                            <button class="btn btn-primary btn-sm mt-2">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="border-dashed-bottom my-4"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   

@code {
    private string defaultImage = "/assets/img/icons/profile_icon.jpg"; // Path to your default image
    private string? imageData;

    protected override void OnInitialized()
    {
        imageData = defaultImage;
    }

    private async Task HandleSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            using (var stream = new MemoryStream())
            {
                await file.OpenReadStream().CopyToAsync(stream);
                imageData = $"data:image/png;base64,{Convert.ToBase64String(stream.ToArray())}";
            }
        }
    }

    private async Task RemoveImage()
    {
        imageData = defaultImage;
        await JS.InvokeVoidAsync("resetFileInput", "fileInput");
    }


}
