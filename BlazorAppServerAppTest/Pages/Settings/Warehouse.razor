@code {
    private Pms.Models.Entity.Settings.Warehouse warehouse = new Pms.Models.Entity.Settings.Warehouse();
    [Inject]
    protected IJSRuntime JSRuntime { get; set; }
    [Inject]
    WarehouseService warehouseService { get; set; }
    List<Pms.Models.Entity.Settings.Warehouse> warehouse_list = new List<Pms.Models.Entity.Settings.Warehouse>();

    private bool showSuccessAlert = false;
    private bool showDangerAlert = false;

    public string SuccessMessage { get; set; }
    public string DangerMessage { get; set; }

    private string errorMessage;

    private bool isLoading = true;
    private int PageSize { get; set; } = 5;  // Number of items per page

    int totalPages { get; set; }
    int currentPage = 1; // Example current page

    private int TotalRecord { get; set; }

    public string? WarehouseNameSearch { get; set; }



    protected override async Task OnInitializedAsync()
    {
        await LoadWarehouse();

    }

    private async Task LoadWarehouse()
    {
        try
        {
            if (WarehouseNameSearch == "") { WarehouseNameSearch = null; }
            warehouse_list = (await warehouseService.Get(null, null, WarehouseNameSearch,null,null,null,null,null,null, currentPage, PageSize)).ToList();
            if (warehouse_list.Count > 0)
            {
                TotalRecord = warehouse_list[0].total_row;
                //  totalPages = TotalRecord / PageSize;
                totalPages = (int)Math.Ceiling((double)TotalRecord / PageSize);
            }
            else
            {
                TotalRecord = 0;
                totalPages = 0;
            }

        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
            StateHasChanged(); // Ensure UI reflects changes
        }
    }

    private async Task SaveOrUpdate()
    {
        try
        {
            if (warehouse.WarehouseId == 0)
            {
                warehouse.EntryDateTime = DateTimeHelper.CurrentDateTime();
                warehouse.EntryBy = UserInfo.UserId;

                warehouse.WarehouseId = await warehouseService.SaveOrUpdate(warehouse);
                if (warehouse.WarehouseId > 0)
                {
                    showSuccessAlert = true;
                    SuccessMessage = MessageManager.SaveSuccess;
                    StateHasChanged(); // Notify Blazor to re-render the component
                                       //Hide the alert after 1 seconds

                    await Task.Delay(1000);
                    showSuccessAlert = false;
                }
                else if (warehouse.WarehouseId == -1)
                {

                    showDangerAlert = true;
                    DangerMessage = $"{warehouse.WarehouseName} {MessageManager.Exist}";
                }
                else
                {
                    showDangerAlert = true;
                    DangerMessage = MessageManager.SaveFaild;
                }
            }
            else
            {

                warehouse.LastModifyDate = DateTimeHelper.CurrentDateTime();
                warehouse.LastModifyBy = UserInfo.UserId;
                warehouse.WarehouseId = await warehouseService.SaveOrUpdate(warehouse);
                if (warehouse.WarehouseId > 0)
                {
                    showSuccessAlert = true;
                    SuccessMessage = MessageManager.UpdateSuccess;
                    StateHasChanged(); // Notify Blazor to re-render the component
                                       //Hide the alert after 1 seconds

                    await Task.Delay(1000);
                    showSuccessAlert = false;
                }
                else
                {
                    showDangerAlert = true;
                    DangerMessage = MessageManager.UpdateFaild;
                }
            }
            // Clear the form after save/update
            await LoadWarehouse(); // Reload orders after save/update
            warehouse = new Pms.Models.Entity.Settings.Warehouse();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }




    private async void EditLoadData(Pms.Models.Entity.Settings.Warehouse item)
    {
        warehouse = item;
    }

    private async Task DeleteItem(long WarehouseId)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation");
        if (confirmed)
        {
            try
            {
                bool result = await warehouseService.Delete(WarehouseId);
                if (result)
                {
                    await JSRuntime.InvokeVoidAsync("showSuccessMessage");
                    await LoadWarehouse();
                }
                else
                {
                    errorMessage = $"{MessageManager.DeleteFaild} {WarehouseId}.";
                }
            }
            catch (Exception ex)
            {
                errorMessage = ex.Message;
            }
        }
        else
        {

        }
    }


    private void onSearch(string WarehouseId)
    {
        /// OrderList = OrderList.Where(w => w.orderNo == OrderId).ToList();
    }

    private Task HideAlert()
    {
        showDangerAlert = false;
        return Task.CompletedTask;
    }
    private async void OnClickAddBtn()
    {
        warehouse = new Pms.Models.Entity.Settings.Warehouse();
    }
    private async void OnRefresh()
    {
        WarehouseNameSearch = null;
        await LoadWarehouse();
    }
    private async void ChangePage(int pageNumber)
    {
        currentPage = pageNumber;
        await LoadWarehouse();
    }

    void HandlePageSizeChanged(int newSize)
    {
        PageSize = newSize;
        ChangePage(1);

    }
}