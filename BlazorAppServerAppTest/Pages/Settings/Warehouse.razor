@page "/wareHouse"


<!-- Right Offcanvas-->
@* <button class="btn btn-primary mb-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Right Offcanvas</button> *@
<div class="offcanvas offcanvas-end" id="offcanvasRight" tabindex="-1" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
        @*   <h5 id="offcanvasRightLabel">Offcanvas right</h5> *@
        <div class="card-header">
            <h5 class="mb-0">Warehouse</h5>


        </div>
        <button class="btn-close text-reset" type="button" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="col-lg-12 ps-lg-2 mb-3">
            <div class="row g-0 h-100 align-items-stretch">
                <div class="col-lg-12 mb-3">


                    <div class=" pb-0">
                        <a class="mb-4 d-block d-flex align-items-center" href="#experience-form" data-bs-toggle="collapse" aria-expanded="true" aria-controls="experience-form"><span class="circle-dashed"><span class="fas fa-plus"></span></span><span class="ms-3">Add new Warehouse</span></a>

                        <div class="collapse show" id="experience-form">
                            <EditForm Model="@warehouse" OnValidSubmit="SaveOrUpdate">
                                <DataAnnotationsValidator />
                                <div class="row">
                                    <SuccessAlert Message="@SuccessMessage" Show="@showSuccessAlert" />
                                    <DangerAlert Message="@DangerMessage" Show="@showDangerAlert" OnClose="HideAlert" />

                                    <div class="col-3 mb-3 text-lg-end">

                                        <label class="form-label" for="WarehouseName"><span class="error-star">*</span>Warehouse Name</label>
                                    </div>
                                    <div class="col-9 col-sm-7 mb-3">
                                        <InputText class="form-control form-control-sm" id="WarehouseName" @bind-Value="@warehouse.WarehouseName" />
                                        <ValidationMessage class="text-danger" For="@(() => warehouse.WarehouseName)" />
                                    </div>
                                    <div class="col-3 mb-3 text-lg-end">

                                        <label class="form-label" for="LocationId"><span class="error-star">*</span>Location Id</label>
                                    </div>
                                    <div class="col-9 col-sm-7 mb-3">
                                        <InputNumber class="form-control form-control-sm" id="LocationId" @bind-Value="@warehouse.LocationId" />
                                        <ValidationMessage class="text-danger" For="@(() => warehouse.LocationId)" />
                                    </div>
                                    <div class="col-3 mb-3 text-lg-end">

                                        <label class="form-label" for="ManagerName">Manager Name</label>
                                    </div>
                                    <div class="col-9 col-sm-7 mb-3">
                                        <InputText class="form-control form-control-sm" id="ManagerName" @bind-Value="@warehouse.ManagerName" />
                                        <ValidationMessage class="text-danger" For="@(() => warehouse.ManagerName)" />
                                    </div>
                                    <div class="col-3 mb-3 text-lg-end">

                                        <label class="form-label" for="PhoneNumber">Phone Number</label>
                                    </div>
                                    <div class="col-9 col-sm-7 mb-3">
                                        <InputText class="form-control form-control-sm" id="PhoneNumber" @bind-Value="@warehouse.PhoneNumber" />
                                        <ValidationMessage class="text-danger" For="@(() => warehouse.PhoneNumber)" />
                                    </div>
                                    <div class="col-3 mb-3 text-lg-end">

                                        <label class="form-label" for="Email">Email</label>
                                    </div>
                                    <div class="col-9 col-sm-7 mb-3">
                                        <InputText class="form-control form-control-sm" id="Email" @bind-Value="@warehouse.Email" />
                                        <ValidationMessage class="text-danger" For="@(() => warehouse.Email)" />
                                    </div>
                                    <div class="col-3 mb-3 text-lg-end">

                                        <label class="form-label" for="Capacity">Capacity</label>
                                    </div>
                                    <div class="col-9 col-sm-7 mb-3">
                                        <InputNumber class="form-control form-control-sm" id="Capacity" @bind-Value="@warehouse.Capacity" />
                                        <ValidationMessage class="text-danger" For="@(() => warehouse.Capacity)" />
                                    </div>
                                    <div class="col-3 mb-3 text-lg-end">

                                        <label class="form-label" for="OperatingHours">Operating Hours</label>
                                    </div>
                                    <div class="col-9 col-sm-7 mb-3">
                                        <InputText class="form-control form-control-sm" id="OperatingHours" @bind-Value="@warehouse.OperatingHours" />
                                        <ValidationMessage class="text-danger" For="@(() => warehouse.OperatingHours)" />
                                    </div>
                                    <div class="col-9 col-sm-7 offset-3">
                                        @if (warehouse.WarehouseId > 0)
                                        {
                                            <button class="btn btn-primary" type="submit">Update</button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-primary" type="submit">Save</button>
                                        }

                                    </div>
                                </div>
                            </EditForm>

                            <div class="border-dashed-bottom my-4"></div>
                        </div>
                    </div>

                </div>

            </div>
        </div>


    </div>
</div>

