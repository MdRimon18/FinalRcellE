@code {
    private Pms.Models.Entity.Settings.Currency currency = new Pms.Models.Entity.Settings.Currency();
    [Inject]
    protected IJSRuntime JSRuntime { get; set; }
    [Inject]
    CurrencyService currencyService { get; set; }
    List<Pms.Models.Entity.Settings.Currency> currency_list = new List<Pms.Models.Entity.Settings.Currency>();

    private bool showSuccessAlert = false;
    private bool showDangerAlert = false;

    public string SuccessMessage { get; set; }
    public string DangerMessage { get; set; }

    private string errorMessage;

    private bool isLoading = true;

    private int PageSize { get; set; } = 5;
    int totalPages { get; set; }
    int currentPage = 1;

    private int TotalRecord { get; set; }

    public string? CurrencyNameSearch { get; set; }





    protected override async Task OnInitializedAsync()
    {
        await LoadCurrency();

    }

    
    private async Task LoadCurrency()
    {
        try
        {
            if (CurrencyNameSearch == "") { CurrencyNameSearch = null; }
            currency_list = (await currencyService.Get(null, null,null, CurrencyNameSearch,null,null,null, null, currentPage, PageSize)).ToList();
            if (currency_list.Count > 0)
            {
                TotalRecord = currency_list[0].total_row;
                //  totalPages = TotalRecord / PageSize;
                totalPages = (int)Math.Ceiling((double)TotalRecord / PageSize);
            }
            else
            {
                TotalRecord = 0;
                totalPages = 0;
            }

        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
            StateHasChanged(); // Ensure UI reflects changes
        }
    }

    private async Task SaveOrUpdate()
    {
        try
        {
            if (currency.CurrencyId == 0)
            {
                currency.EntryDateTime = DateTimeHelper.CurrentDateTime();
                currency.EntryBy = UserInfo.UserId;
                currency.LanguageId = CompanyInfo.LanguageId;


                currency.CurrencyId = await currencyService.Save(currency);
                if (currency.CurrencyId > 0)
                {
                    showSuccessAlert = true;
                    SuccessMessage = MessageManager.SaveSuccess;
                    StateHasChanged(); // Notify Blazor to re-render the component
                                       //Hide the alert after 1 seconds

                    await Task.Delay(1000);
                    showSuccessAlert = false;
                }
                else if (currency.CurrencyId == -1)
                {
                    showDangerAlert = true;
                    DangerMessage = $"{currency.CurrencyId} {MessageManager.Exist}";
                }
                else
                {
                    showDangerAlert = true;
                    DangerMessage = MessageManager.SaveFaild;
                }
            }
            else
            {

                currency.LastModifyDate = DateTimeHelper.CurrentDateTime();
                currency.LastModifyBy = UserInfo.UserId;
                currency.LanguageId = CompanyInfo.LanguageId;

                bool isUpdate = await currencyService.Update(currency);
                if (isUpdate)
                {
                    showSuccessAlert = true;
                    SuccessMessage = MessageManager.UpdateSuccess;
                    StateHasChanged(); // Notify Blazor to re-render the component
                                       //Hide the alert after 1 seconds

                    await Task.Delay(1000);
                    showSuccessAlert = false;
                }
                else
                {
                    showDangerAlert = true;
                    DangerMessage = MessageManager.UpdateFaild;
                }
            }
            // Clear the form after save/update
            await LoadCurrency(); // Reload orders after save/update
            currency = new Pms.Models.Entity.Settings.Currency();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }




    private async void EditLoadData(Pms.Models.Entity.Settings.Currency item)
    {
        currency = item;
    }

    private async Task DeleteItem(long CurrencyId)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation");
        if (confirmed)
        {
            try
            {
                bool result = await currencyService.Delete(CurrencyId);
                if (result)
                {
                    await JSRuntime.InvokeVoidAsync("showSuccessMessage");
                    await LoadCurrency();
                }
                else
                {
                    errorMessage = $"{MessageManager.DeleteFaild} {CurrencyId}.";
                }
            }
            catch (Exception ex)
            {
                errorMessage = ex.Message;
            }
        }
        else
        {

        }
    }


    private void onSearch(string CurrencyId)
    {
        /// OrderList = OrderList.Where(w => w.orderNo == OrderId).ToList();
    }

    private Task HideAlert()
    {
        showDangerAlert = false;
        return Task.CompletedTask;
    }
    private async void OnClickAddBtn()
    {
        currency = new Pms.Models.Entity.Settings.Currency();
    }
    private async void OnRefresh()
    {
        CurrencyNameSearch = null;
        await LoadCurrency();
    }
    private async void ChangePage(int pageNumber)
    {
        currentPage = pageNumber;
        await LoadCurrency();
    }

    void HandlePageSizeChanged(int newSize)
    {
        PageSize = newSize;
        ChangePage(1);

    }

}