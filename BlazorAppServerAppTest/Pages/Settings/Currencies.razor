@page "/currency"


<!-- Right Offcanvas-->
@* <button class="btn btn-primary mb-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Right Offcanvas</button> *@
<div class="offcanvas offcanvas-end" id="offcanvasRight" tabindex="-1" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
        @*   <h5 id="offcanvasRightLabel">Offcanvas right</h5> *@
        <div class="card-header">
            <h5 class="mb-0">Currency</h5>


        </div>
        <button class="btn-close text-reset" type="button" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="col-lg-12 ps-lg-2 mb-3">
            <div class="row g-0 h-100 align-items-stretch">
                <div class="col-lg-12 mb-3">
                   
                        <div class="pb-0">
                            <a class="mb-4 d-block d-flex align-items-center" href="#experience-form" data-bs-toggle="collapse" aria-expanded="true" aria-controls="experience-form"><span class="circle-dashed"><span class="fas fa-plus"></span></span><span class="ms-3">Add new Status</span></a>

                            <div class="collapse show" id="experience-form">
                                <EditForm Model="@currency" OnValidSubmit="SaveOrUpdate">
                                    <DataAnnotationsValidator />
                                    <div class="row">
                                        <SuccessAlert Message="@SuccessMessage" Show="@showSuccessAlert" />
                                        <DangerAlert Message="@DangerMessage" Show="@showDangerAlert" OnClose="HideAlert" />

                                        <div class="col-3 mb-3 text-lg-end">

                                            <label class="form-label" for="CurrencyName"><span class="error-star">*</span>Currency Name</label>
                                        </div>
                                        <div class="col-9 col-sm-7 mb-3">
                                            <InputText class="form-control form-control-sm" id="CurrencyName" @bind-Value="@currency.CurrencyName" />
                                            <ValidationMessage class="text-danger" For="@(() => currency.CurrencyName)" />
                                        </div>
                                       
                                        <div class="col-3 mb-3 text-lg-end">

                                            <label class="form-label" for="CurrencyCode">Currency Code</label>
                                        </div>
                                        <div class="col-9 col-sm-7 mb-3">
                                            <InputText class="form-control form-control-sm" id="CurrencyCode" @bind-Value="@currency.CurrencyCode" />
                                            <ValidationMessage class="text-danger" For="@(() => currency.CurrencyCode)" />
                                        </div>
                                        <div class="col-3 mb-3 text-lg-end">

                                            <label class="form-label" for="CurrencyShortName"><span class="error-star">*</span>Currency Short Name</label>
                                        </div>
                                        <div class="col-9 col-sm-7 mb-3">
                                            <InputText class="form-control form-control-sm" id="CurrencyShortName" @bind-Value="@currency.CurrencyShortName" />
                                            <ValidationMessage class="text-danger" For="@(() => currency.CurrencyShortName)" />
                                        </div>
                                        <div class="col-3 mb-3 text-lg-end">

                                            <label class="form-label" for="Symbol"><span class="error-star">*</span>Symbol</label>
                                        </div>
                                        <div class="col-9 col-sm-7 mb-3">
                                            <InputText class="form-control form-control-sm" id="Symbol" @bind-Value="@currency.Symbol" />
                                            <ValidationMessage class="text-danger" For="@(() => currency.Symbol)" />
                                        </div>
                                        <div class="col-3 mb-3 text-lg-end">

                                            <label class="form-label" for="ExchangeRate">Exchange Rate</label>
                                        </div>
                                        <div class="col-9 col-sm-7 mb-3">
                                            <InputNumber class="form-control form-control-sm" id="ExchangeRate" @bind-Value="@currency.ExchangeRate" />
                                            <ValidationMessage class="text-danger" For="@(() => currency.ExchangeRate)" />
                                        </div>
                                        <div class="col-9 col-sm-7 offset-3">
                                            @if (currency.CurrencyId > 0)
                                            {
                                                <button class="btn btn-primary" type="submit">Update</button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-primary" type="submit">Save</button>
                                            }

                                        </div>
                                    </div>
                                </EditForm>

                                <div class="border-dashed-bottom my-4"></div>
                            </div>
                        </div>
                    
                </div>

            </div>
        </div>


    </div>
</div>

